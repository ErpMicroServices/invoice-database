{
  "name": "invoice-database",
  "version": "1.0.2-SNAPSHOT",
  "description": "Data for the invoice domain",
  "author": {
    "name": "Jim Barrows",
    "email": "Jim.Barrows@gmail.com"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:database && npm run build:docker",
    "build:docker": "docker build --tag erpmicroservices/invoice-database --rm .",
    "build:database": "mkdir -p build && cat sql/V_invo*.sql > build/database_up.sql",
    "clean": "rm -rf build && rm -rf generated-sql && yes | docker rmi --force erpmicroservices/invoice-database && yes | docker volume prune && docker rm invoice-database",
    "migrate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-invoice} -user=${DB_USER:-invoice} -password=${DB_PASSWORD:-invoice} migrate",
    "migrate:info": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-invoice} -user=${DB_USER:-invoice} -password=${DB_PASSWORD:-invoice} info",
    "migrate:validate": "npx flyway -configFiles=flyway.conf -url=jdbc:postgresql://${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-invoice} -user=${DB_USER:-invoice} -password=${DB_PASSWORD:-invoice} validate",
    "push": "docker push erpmicroservices/invoice-database:latest",
    "start": "docker run --publish 5432:5432 --name invoice-database erpmicroservices/invoice-database",
    "test": "cucumber-js --tags @party_database  --require-module @babel/register --require-module @babel/polyfill  -r ./features ../invoice-features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErpMicroServices/invoice-database.git"
  },
  "bugs": {
    "url": "https://github.com/ErpMicroServices/invoice-database/issues"
  },
  "homepage": "https://github.com/ErpMicroServices/invoice-database#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.22.0",
    "braces": ">=3.0.2",
    "chai": "^4.3.6",
    "cucumber": "^6.0.7",
    "dotenv": "^16.0.3",
    "node-flywaydb": "^3.0.7",
    "pg-promise": "^10.12.0"
  }
}
